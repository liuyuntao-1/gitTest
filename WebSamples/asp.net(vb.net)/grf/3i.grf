Object Report
	Version='6.0.0.0'
	Title='3i.交叉表纵向单元格合并'
	Author='锐浪报表软件'
	Description='演示交叉表分组单元格合并功能。\r\n\r\n在定义好交叉表之后，再定义占列式分组即可。\r\n'
	Object Font
		Name='宋体'
		Size=90000,0
		Weight=400
		Charset=134
	End
	Object Printer
		Size=256
		LeftMargin=1.5
