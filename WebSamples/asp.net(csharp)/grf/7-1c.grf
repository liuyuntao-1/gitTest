			Height=1.79917
			Items Control
				Item
					Type=StaticBox
					Name='MainTitle'
					Center=Horizontal
					Left=4.7625
					Top=0.185208
					Width=6.48229
					Height=0.608542
					Object Font
						Name='宋体'
						Size=150000,0
						Bold=T
						Charset=134
					End
					TextAlign=MiddleCenter
					Text='按产品统计销售汇总报表'
				End
				Item
					Type=StaticBox
					Name='SubTitle'
					Center=Horizontal
					Left=1.11125
					Top=1.00542
					Width=13.8113
					Height=0.608542
					Object Font
						Name='宋体'
						Size=120000,0
						Bold=T
						Charset=134
					End
					TextAlign=MiddleCenter
					Text='在内容行的“格式化脚本”中实现文字按条件高亮显示。'
				End
			End
		End
	End
End
