	Object PageHeader
		Height=1.19063
		FormatScript='//控制部件框在偶数页不显示\r\nvar PageNo = Report.SystemVarValue(3); //grsvPageNumber=3\r\nSender.Controls.Item("MemoBox1").Visible = (PageNo%2 != 0);\r\n'
